<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AssetsController</servlet-name>
        <servlet-class>controller.AssetsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ForumController</servlet-name>
        <servlet-class>controller.ForumController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TopicController</servlet-name>
        <servlet-class>controller.TopicController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AssetsController</servlet-name>
        <url-pattern>/AssetsController</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ForumController</servlet-name>
        <url-pattern>/forum</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeletePostServlet</servlet-name>
        <servlet-class>controller.DeleteController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeletePostServlet</servlet-name>
        <url-pattern>/delete-post</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>TopicController</servlet-name>
        <url-pattern>/topic</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>controller.LogoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
</web-app>